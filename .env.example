# Environment Configuration Example
# Copy this file to .env and fill in your actual API keys
# DO NOT commit .env with real keys to Git

# Google Maps API Key (for reverse geocoding and distance calculations)
# Get from: https://developers.google.com/maps/documentation/geocoding
GOOGLE_MAPS_API_KEY=your_api_key_here

# OpenStreetMap Nominatim API (no key required but user-agent recommended)
# Set this to your application name for API courtesy
NOMINATIM_USER_AGENT=real-estate-ml-pipeline

# Proxy Configuration (optional, for IP rotation during scraping)
# Format: protocol://user:password@host:port
PROXY_URL=http://proxy.example.com:8080

# Scraper Configuration
SCRAPER_DELAY_MIN=1.0
SCRAPER_DELAY_MAX=3.0
SCRAPER_TIMEOUT=10
SCRAPER_RETRIES=3

# Database Configuration (if using live data)
DATABASE_URL=sqlite:///real_estate.db

# Logging Configuration
LOG_LEVEL=INFO
LOG_FILE=pipeline.log

# Model Configuration
MODEL_PATH=models/lgb_model.pkl
RANDOM_STATE=42

# Feature Configuration
MIN_RECORDS_FOR_TRAINING=1000
TRAIN_TEST_SPLIT=0.8

# Geographic Configuration (Mumbai defaults)
TARGET_CITY=Mumbai
TARGET_LATITUDE=19.0760
TARGET_LONGITUDE=72.8777
